<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterAddress"
    android:paddingHorizontal="20dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <CheckBox
            android:id="@+id/get_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문자 정보 가져오기"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/regi_adr_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="주문고객 이름을 입력해주세요"
        android:background="@drawable/border"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:paddingLeft="5dp"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/regi_adr_userTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="01000000000"
        android:background="@drawable/border"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:paddingLeft="5dp"
        android:singleLine="true"/>


</LinearLayout>