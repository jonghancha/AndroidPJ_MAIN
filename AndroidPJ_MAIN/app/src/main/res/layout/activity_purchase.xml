<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductViewActivity">

    <LinearLayout
        android:id="@+id/layout_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문/결제"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@color/white"

        />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_purchase">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:background="@color/white"
            >

            <!--        주문자 정보-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주문자 정보"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="주문고객 이름을 입력해주세요"
                android:background="@drawable/border"
                android:layout_marginVertical="5dp"
                android:paddingVertical="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="주문고객 이름을 입력해주세요"
                android:background="@drawable/border"
                android:layout_marginVertical="5dp"
                android:paddingVertical="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="주문고객 이름을 입력해주세요"
                android:background="@drawable/border"
                android:layout_marginVertical="5dp"
                android:paddingVertical="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"/>


            <!--        배송지 정보-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배송지 정보"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배송지 등록"
                android:background="@drawable/border"
                android:layout_marginVertical="5dp"
                android:paddingVertical="10dp"
                android:singleLine="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배송 요청 사항"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:autofillHints="배송 요청 사항을 선택해주세요"
                android:background="@drawable/border"
                android:layout_marginVertical="5dp"
                android:paddingVertical="10dp"
                android:singleLine="true"/>
            <Button
                android:id="@+id/btn_makeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="직접 입력"
                />
            <LinearLayout
                android:id="@+id/ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/purchase_recycleView"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제하기"
            android:layout_weight="4"
            android:textSize="20dp"/>

    </LinearLayout>

</RelativeLayout>