<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OrderFinished"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="구매가 성공적으로 완료되었습니다!"
        />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        >



    <!--        주문자 정보-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문자 정보"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/of_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:paddingLeft="5dp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/of_userTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:paddingLeft="5dp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/of_userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:paddingLeft="5dp"
        android:singleLine="true"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="배송 요청 사항"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

        <TextView
            android:id="@+id/of_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:background="@drawable/border"
            android:layout_marginVertical="5dp"
            android:paddingVertical="10dp"
            android:paddingLeft="5dp"
            android:singleLine="true"/>
    <!--        주문자 정보-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="배송자 정보"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/of_rCvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:paddingLeft="5dp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/of_rCvTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:paddingLeft="5dp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/of_rCvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:paddingLeft="5dp"
        android:singleLine="true"/>

    </LinearLayout>
    <Button
        android:id="@+id/of_to_Home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="홈 화면으로"
        android:background="@drawable/btn_round"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"

        />



</LinearLayout>